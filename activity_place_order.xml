<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".place_order">


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_1"
        android:layout_below="@id/layout_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MEAT PIE(Rs.500 each)"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  x1"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_weight="0.9"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            ></TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_3"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAUSAGE ROLL(Rs.100 each)"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  x3"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_weight="0.9"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            ></TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_3"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_4"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPRING ROLL(Rs.50 each)"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  x4"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_weight="0.9"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            ></TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_4"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_5"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PINTO BEAN SOUP(Rs.250 each)"
            android:textColor="@android:color/black"
            android:layout_weight="0.1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            ></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  x1"
            android:background="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_weight="0.9"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            ></TextView>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:padding="10dp"
            android:gravity="center"
            android:text="Order List"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            android:textColor="@android:color/white"
            android:background="@color/colorSignup">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSignup"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total:Rs. 1250"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="8dp"
            >

        </TextView>

        <Button
            android:text="Place Order"
            android:textColor="@android:color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
           android:background="@color/colorSignin">
        </Button>

    </LinearLayout>

</RelativeLayout>